<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-4.2.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

	<security:http auto-config="true" use-expressions="false">

		<security:form-login login-page="/user/login"
			username-parameter="userid" password-parameter="userpw"
			login-processing-url="/user/loginAction" default-target-url="/"
			authentication-failure-url="/user/login" 
			authentication-success-handler-ref="logS"
			 />

		<security:session-management>
			<security:concurrency-control
				max-sessions="1" expired-url="/user/login_duplicate" />
		</security:session-management>

		<security:logout delete-cookies="JSESSIONID"
			invalidate-session="true" logout-url="/logout" logout-success-url="/" />

		<security:intercept-url pattern="/timeline"
			access="ROLE_MEMBER" />

		<security:intercept-url pattern="/user/myPage"
			access="ROLE_MEMBER" />
		<security:intercept-url pattern="/user/modify"
			access="ROLE_MEMBER" />
		<security:intercept-url pattern="/user/apiRegister"
			access="ROLE_MEMBER" />
		<security:intercept-url pattern="/recipe/modify"
			access="ROLE_MEMBER" />
		<security:intercept-url pattern="/recipe/register"
			access="ROLE_MEMBER" />
		<security:intercept-url pattern="/recipe/view"
			access="ROLE_MEMBER" />
		<security:csrf disabled="true" />

	</security:http>



	<security:authentication-manager>
		<security:authentication-provider>
			<security:jdbc-user-service
				data-source-ref="dataSource"
				users-by-username-query="select userid username, userpw password, 1 enable from tbl_user where userid = ?"
				authorities-by-username-query="select userid username, 'ROLE_MEMBER' authority from tbl_user where userid = ?" />


		</security:authentication-provider>
	</security:authentication-manager>

<bean id="logS" class="org.noodle.security.LoginSuccessHandler">
  <property name="serivce" ref="memberServiceImpl"></property>
  <property name="alwaysUseDefaultTargetUrl" value="false" />
</bean>
</beans>