<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="org.noodle.mapper.RecipeReplyMapper">
  <insert id="create">
  insert into tbl_recipereply(mno, rno, content)
  values(#{mno}, #{rno}, #{content})
  
  </insert>
  
  <select id="read" resultType="RecipeReplyVO">
  select * from tbl_recipereply where rno = #{rno}
  </select>
  
  <update id="update">
  update tbl_recipereply set mno = #{mno}, content = #{content} 
  where rno = #{rno}
  </update>
  
  <delete id="delete">
  delete tbl_recipereply where rno = #{rno}
  </delete>
  
  <select id="listAll" resultType="RecipeReplyVO">
  select * from tbl_recipereply
  </select>
  
  </mapper>